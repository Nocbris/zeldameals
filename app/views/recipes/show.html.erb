<h1><%= @recipe.name %></h1>

<p style="color: green"><%= notice %></p>
<%= render @recipe %>

<div><%= link_to "Modifier la recette", edit_recipe_path(@recipe) %>
<%= link_to "Retour aux recettes", recipes_path %></div>

<div><%= button_to "Effacer la recette", (@recipe), method: :delete %></div>

<div class= "Commentaires">
<h3>Commentaires:</h3>
<%= render @recipe.comments %>

<h3>Ajouter un commentaire:</h3>
<%= render 'comments/form' %>
</div>
